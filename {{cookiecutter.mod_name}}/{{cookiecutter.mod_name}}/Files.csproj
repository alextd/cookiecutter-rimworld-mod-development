<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <BaseIntermediateOutputPath>.vs\unused\</BaseIntermediateOutputPath>
    <ProjectGuid>{AA1EF112-E817-4ED1-849A-EE55B8DAF3C0}</ProjectGuid>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <OutputPath>.vs\unused\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <OutputPath>..\{{cookiecutter.mod_name}} - Release\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
		<ReleaseFiles Include="About\**;Defs\**;Patches\**;Languages\**;Sounds\**;Textures\**"/>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="Build">
    <RemoveDir Directories="obj" />
  </Target>
  <Target Name="Clean" />
  <Target Name="Build" />
  <Target Name="Rebuild" />
	<Target Name="PostBuild" AfterTargets="Build" Condition=" '$(Configuration)' == 'Release' ">
    <Copy SourceFiles="@(ReleaseFiles)"
					DestinationFiles="@(ReleaseFiles->'$(OutputPath)%(RelativeDir)%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
    <Move SourceFiles="$(OutputPath)About\About-Release.xml" 
          DestinationFiles="$(OutputPath)About\About.xml" 
          OverwriteReadOnlyFiles="true" />
	</Target>
</Project>